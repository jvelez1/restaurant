<p id="notice"><%= notice %></p>

<h1>Dishes</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @dishes.each do |dish| %>
      <tr>
        <td><%=dish.name%></td>
        <td><%=dish.description%></td>
        <td><%=dish.price%></td>
        <td><%= link_to 'Show', chef_dish_path(@chef, dish) %></td>
        <td><%= link_to 'Edit', edit_chef_dish_path(@chef, dish) %></td>
        <td><%= link_to 'Disable', [@chef, dish], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Dish', new_chef_dish_path(@chef) %>
